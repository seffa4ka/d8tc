{#
/**
 * @file currency_converter.html.twig
 * Main theme.
 */
#}
<div class="window-converter">
  <div class="first-slot-converter slot-converter">
    <div class="label-converter">
      <select id="select1">
        {% for currency in currencies %}
          <option id="{{ currency }}">{{ currency }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="input-converter">
      <input type="number" id="text1" step="0.001" min="0">
    </div>
  </div>
  <div class="second-slot-converter slot-converter">
    <div class="label-converter">
      <select id="select2">
        {% for currency in currencies %}
          <option id="{{ currency }}">{{ currency }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="input-converter">
      <input type="number" id="text2" step="0.001" min="0">
    </div>
  </div>
</div>
<button class="button-converter">flip</button>
